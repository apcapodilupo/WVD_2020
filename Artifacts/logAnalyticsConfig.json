{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "hostpoolName": {
            "type": "string"
        }

    },
    "variables": {
        "subscriptionID": "[subscription().subscriptionId]",
        "resourceGroupName": "[resourceGroup().name]",
        "location": "[resourceGroup().location]",

        "workspaceName": "[concat( 'WVDMonior-',uniquestring(resourceGroup().id))]",
        "sku": "pergb2018",
        "settingName": "HostPool-Diag",
        "workspaceId": "[concat( '/subscriptions/',variables('subscriptionID'),'/resourceGroups/',variables('resourceGroupName'),'/providers/Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]",

        "extensionNames": [ "MicrosoftMonitoringAgent" ],
        "perfCounterName": "[concat('performanceCounters-',variables('workspaceName'))]"

    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2017-03-15-preview",
            "name": "[variables('workspaceName')]",
            "location": "[variables('location')]",
            "properties": {
                "sku": {
                    "name": "[variables('sku')]"
                }
            }
        },
        {
            "type": "Microsoft.DesktopVirtualization/hostpools/providers/diagnosticSettings",
            "apiVersion": "2017-05-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName'))]"
            ],
            "name": "[concat(parameters('hostpoolName'),'/Microsoft.Insights/', variables('settingName'))]",
            "properties": {
                "workspaceId": "[variables('workspaceId')]",
                "logs": [
                    {
                        "category": "Checkpoint",
                        "enabled": true
                    },
                    {
                        "category": "Error",
                        "enabled": true
                    },
                    {
                        "category": "Management",
                        "enabled": true
                    },
                    {
                        "category": "Connection",
                        "enabled": true
                    },
                    {
                        "category": "HostRegistration",
                        "enabled": true
                    }
                ]
            }
        }
        
        
    ]
}